<div class="row">
    <div class="col-lg-12">
    <h1 class="bg-primary">POST request received</h1>
    <p>The POST request received contained the value key/value pairs:</p>
    <div class="">
    <table class="table table-striped table-responsive">
        <thead>
            <th>Key</th>        
            <th>Value</th>
        </thead>
        {{#each kvPairs}}
        <tr>
            <td>{{this.key}}</td>
            <td>{{this.value}}</td>
        </tr>
        {{/each}}
    </table>
    </div>  <!-- End well -->
    </div> <!-- End column -->
</div> <!-- End row -->